<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:opencv="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <org.opencv.android.JavaCameraView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:id="@+id/nv_camera_view"
            opencv:show_fps="true"
            opencv:camera_id="any" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color Filter"
        android:id="@+id/colorFilterSwitch"
        android:layout_gravity="right|bottom"
        android:textColor="@android:color/white"/>


    <CheckBox
        android:text="RIO not found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roborioResolvedIndicator"
        android:layout_gravity="right"
        android:paddingRight="5dp"
        android:textAppearance="@android:style/TextAppearance.Holo"
        android:textColor="@android:color/white"
        android:clickable="false"/>

</FrameLayout>